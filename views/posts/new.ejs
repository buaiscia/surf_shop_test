<H1>NEW POST</H1>

<form action="/posts" method="POST">
    <div>
        <INPUT type="text" name="post[title]" placeholder="Title"></INPUT>
    </div>
    <div>
        <INPUT type="text" name="post[price]" placeholder="Price"></INPUT>
    </div>
    <div>
        <textarea name="post[description]" placeholder="Description"></textarea>
    </div>
    <div>
        <INPUT type="text" name="post[location]" placeholder="Location"></INPUT>
    </div>

    <input type="submit">
</form>

